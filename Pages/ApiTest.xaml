<Page x:Class="MyRaceWPF.Pages.ApiTest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyRaceWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ApiTest">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonTest" Grid.Column="0" Grid.Row="0" Content="TEST" HorizontalAlignment="Left" Margin="5,5,5,5" VerticalAlignment="Top" Click="buttonTest_Click"/>
        <DataGrid x:Name="gridResult" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="1" Margin="5,5,5,5"/>
    </Grid>
    
</Page>
